<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<div class="navbar navbar-dark bg-dark fixed-top">
		<div class="container">
			@Html.ActionLink("Simple Web APP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
		</div>
	</div>
	<div class="navbar">
		<div class="container">
			@Html.ActionLink("Home", "Index", "Home") |
			@Html.ActionLink("Unprotected", "UnprotectedRoute", "Home") |
			@Html.ActionLink("Protected", "ProtectedRoute", "Home") |
		</div>
	</div>

	@*<div class="navbar-collapse collapse">
		<ul class="nav navbar-nav">
			<li>@Html.ActionLink("Home", "Index", "Home")</li>
		</ul>
	</div>*@
	<br />
	<div class="container body-content">
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
		</footer>
	</div>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>